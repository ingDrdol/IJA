<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.shape.Circle?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="ija.project.ijarobots.MainController"
          fx:id="frame" >
  <columnConstraints>
    <ColumnConstraints percentWidth="100"/>
  </columnConstraints>
  <rowConstraints>
    <RowConstraints percentHeight="85"/>
    <RowConstraints percentHeight="15"/>
  </rowConstraints>


  <AnchorPane GridPane.fillHeight="true" GridPane.fillWidth="true"
              GridPane.columnIndex="0"
              GridPane.rowIndex="0"
              style="-fx-background-color: purple"
              fx:id="robotPlayground">
  </AnchorPane>

  <GridPane
          GridPane.fillHeight="true" GridPane.fillWidth="true"
          GridPane.columnIndex="0" GridPane.rowIndex="1"
          style="-fx-background-color: blue"
          fx:id="controls">

  </GridPane>
</GridPane>
